# Verifier Service Environment Template

# Runtime
NODE_ENV=production
DEV_MODE=false
VERBOSE_LOGGING=false

# CORS
ALLOWED_ORIGINS=*

# Solana
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_FALLBACK_RPCS=

# Verifier Signing Key (32-byte hex)
# Generate: openssl rand -hex 32
VERIFIER_SIGNING_KEY=

# Play Integrity / Package Validation
# Expected Android package name for Integrity payload
VERIFIER_EXPECTED_PACKAGE=com.beam.app

# Optional: Provide Google Play Integrity certificates (PEM)
# VERIFIER_CERT_PEM_PATH=/var/task/certs/play-integrity.pem
# VERIFIER_CERT_PEM="-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----"

# Allowed APK digest SHA-256 (comma-separated). Leave empty to accept any in dev.
VERIFIER_ALLOWED_DIGESTS=

# JWKs config (not required for Play Integrity JWS validation when using certs)
VERIFIER_JWKS_URL=https://www.googleapis.com/androidcheck/v1/attestation/publicKey
VERIFIER_JWKS_PATH=
VERIFIER_ALLOW_FETCH=true
VERIFIER_ALLOW_UNSIGNED=false

# Rate limiting and timeouts
MAX_REQUESTS_PER_MINUTE=100
REQUEST_TIMEOUT_MS=30000
